doi = {10.1016/j.shpsb.2010.07.003},
file = {:home/links/ql260/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Guillemot - 2010 - Connections between simulations and observation in climate computer modeling. Scientist's practices and bottom-up epi.pdf:pdf},
