author = {Schultz, David M. and Schumacher, Philip N. and Doswell, Charles A.},
doi = {10.1175/1520-0493(2000)129<4143:TIOI>2.0.CO;2},
file = {:home/links/ql260/Documents/Papers{\_}to{\_}read/The Intricacies of Instabilities.pdf:pdf},
journal = {Monthly Weather Review},
number = {12},
pages = {4143--4148},
title = {{The Intricacies of Instabilities}},
