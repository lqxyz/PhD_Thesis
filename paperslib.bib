keywords = {Climate models,Computer simulation,Evaluation,Modeling,Observation data,Scientific practices,Validation},
number = {3},
pages = {242--252},
title = {{Connections between simulations and observation in climate computer modeling. Scientist's practices and "bottom-up epistemology" lessons}},
volume = {41},
year = {2010}
}
