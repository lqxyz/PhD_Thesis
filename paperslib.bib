doi = {10.1007/s00382-015-2846-0},
file = {:home/links/ql260/Documents/Papers{\_}to{\_}read/Brient et al-2016-Shallowness of tropical low clouds as a predictor of climate models' response to warming-ClimDyn.pdf:pdf},
