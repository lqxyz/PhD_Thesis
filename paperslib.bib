doi = {10.1111/j.1600-0870.2005.00131.x},
file = {:home/links/ql260/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Yun et al. - 2005 - A multi-model superensemble algorithm for seasonal climate prediction using DEMETER forecasts.pdf:pdf},
journal = {Tellus, Series A: Dynamic Meteorology and Oceanography},
number = {3},
pages = {280--289},
pmid = {35},
title = {{A multi-model superensemble algorithm for seasonal climate prediction using DEMETER forecasts}},
