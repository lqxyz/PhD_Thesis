file = {:home/links/ql260/Documents/Papers{\_}to{\_}read/cloud/Tompkins2002-A Prognostic Parameterization for the Subgrid-Scale Variability of Water Vapor and Clouds in Large-Scale Models and Its Use to Diagnose Cloud Cover.pdf:pdf},
