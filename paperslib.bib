file = {:home/links/ql260/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Zhang, Walsh - 2006 - Toward a seasonally ice-covered Arctic Ocean Scenarios from the IPCC AR4 model simulations.pdf:pdf},
